<div class="row mt-3">
    <div class="col-1"></div>
    <div class="col-10">
        <table class="table table-striped table-hover table-bordered">
            <thead class="bg-primary">
                <tr>
                    <td>Título</td>
                    <td>Tipo</td>
                    <td>Precio</td>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in ViewBag.Lista){
                <tr>
                    <td>@item.Titulo</td>
                    <td>@item.Tipo</td>
                    <td class="text-right">S/ @string.Format("{0:#,##0.00}", @item.Precio)</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <div class="col-1"></div>
</div>